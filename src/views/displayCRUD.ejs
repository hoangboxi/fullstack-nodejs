<body>
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
.btn-edit {
  outline: none;
  border: none;
  background: orange;
  height: 25px;
  width: 60px;
  border-radius: 3px;
  cursor: pointer;
}
.btn-delete {
  outline: none;
  border: none;
  background: rgb(255, 0, 102);
  height: 25px;
  width: 60px;
  border-radius: 3px;
  cursor: pointer;
}

</style>
<table style="width:100%">
  <tr>
    <th>email</th>
    <th>Firstname</th>
    <th>Lastname</th> 
    <th>address</th>
    <th>actions</th>
  </tr>
  
  <% for(let i=0; i < dataTable.length; i++) { %>
    <tr>
      <td><%= dataTable[i].email %></td>
      <td><%= dataTable[i].firstName %></td>
      <td><%= dataTable[i].lastName %></td>
      <td><%= dataTable[i].address %></td>
      <td>
        <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button" class="btn-edit">Edit </a>
        <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button" class="btn-delete">Delete </a>
      </td> 
    </tr>
 <% } %>
</table>



</body>
</html>